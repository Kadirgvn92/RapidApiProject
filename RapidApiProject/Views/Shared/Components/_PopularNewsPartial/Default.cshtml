@model List<NavbarMovieViewModel>

<div class="container-fluid populer-news py-5">
    <div class="container py-5">
        <div class="tab-class mb-4">
            <div class="row g-4">
                <div class="col-lg-8 col-xl-9">
                      <div class="d-flex flex-column flex-md-row justify-content-md-between border-bottom mb-4">
                    <h1 class="mb-4">Son Çıkan Filmler</h1>
                    <ul class="nav nav-pills d-inline-flex text-center">
                    <li class="nav-item mb-3">
                    <a class="d-flex py-2 bg-light rounded-pill active me-2" data-bs-toggle="pill" href="#tab-1">
                    <span class="text-dark" style="width: 100px;">Güncel</span>
                    </a>
                    </li>

                    </ul>
                    </div> 
                    <div class="tab-content mb-4">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                                <div class="col-lg-8">
                                    @foreach (var item in Model.OrderBy(x => x.big_image).Take(1))
                                    {
                                        <div class="position-relative rounded overflow-hidden">
                                            <img src="@item.big_image" class="img-zoomin img-fluid rounded w-100" alt="">
                                            <div class="position-absolute text-white px-4 py-2 bg-primary rounded" style="top: 20px; right: 20px;">
                                                Son Çıkan Film
                                            </div>
                                        </div>

                                        <div class="my-4">
                                            <a href="@item.imdb_link" class="h4">@item.title</a>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            @* <a href="#" class="text-dark link-hover me-3"><i class="fa fa-clock"></i> Fiyat : @item.fiyat</a>
                                        <a href="#" class="text-dark link-hover me-3"><i class="fa fa-eye"></i> Yayın : @item.yayın</a> *@
                                        </div>
                                        <p class="my-4">
                                            @item.description
                                        </p>
                                    }

                                </div>
                                <div class="col-lg-4">
                                    <div class="row g-4">
                                        @foreach (var item in Model.Take(5))
                                        {
                                            <div class="col-12">
                                                <div class="row g-4 align-items-center">
                                                    <div class="col-5">
                                                        <div class="overflow-hidden rounded">
                                                            <img src="@item.image" class="img-zoomin img-fluid rounded w-100" alt="">
                                                        </div>
                                                    </div>
                                                    <div class="col-7">
                                                        <div class="features-content d-flex flex-column">
                                                            <p class="text-uppercase mb-2">@item.title</p>
                                                            <a href="" class="h6">@item.description</a>
                                                            <small class="text-body d-block"><i class="fas fa-calendar-alt me-1"></i> @item.year</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="border-bottom mb-4">
                        <h2 class="my-4">En Çok İzlenen Başyapıtlar</h2>
                    </div>
                    <div class="whats-carousel owl-carousel">
                        @foreach(var item in Model.OrderBy(x => x.id).Take(5))
                        {
                            <div class="latest-news-item">
                                <div class="bg-light rounded">
                                    <div class="rounded-top overflow-hidden">
                                        <img src="@item.image" class="img-zoomin img-fluid rounded-top w-100" alt="">
                                    </div>
                                    <div class="d-flex flex-column p-4">
                                        <a href="@item.imdb_link" class="h4">@item.title</a>
                                        <div class="d-flex justify-content-between">
                                            <a href="@item.imdb_link" class="small text-body link-hover">@item.rank</a>
                                            <small class="text-body d-block"><i class="fas fa-calendar-alt me-1"></i>@item.year</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                       
                    </div>
                   
                </div>
                <div class="col-lg-4 col-xl-3">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="p-3 rounded border">
                                <h4 class="mb-4">Takipte Kal</h4>
                                <div class="row g-4">
                                    <div class="col-12">
                                        <a href="#" class="w-100 rounded btn btn-primary d-flex align-items-center p-3 mb-2">
                                            <i class="fab fa-facebook-f btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">13,977 Takipçi</span>
                                        </a>
                                        <a href="#" class="w-100 rounded btn btn-danger d-flex align-items-center p-3 mb-2">
                                            <i class="fab fa-twitter btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">21,798 Takipçi</span>
                                        </a>
                                        <a href="#" class="w-100 rounded btn btn-warning d-flex align-items-center p-3 mb-2">
                                            <i class="fab fa-youtube btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">7,999 Abone</span>
                                        </a>
                                        <a href="#" class="w-100 rounded btn btn-dark d-flex align-items-center p-3 mb-2">
                                            <i class="fab fa-instagram btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">19,764 Takipçi</span>
                                        </a>
                                        <a href="#" class="w-100 rounded btn btn-secondary d-flex align-items-center p-3 mb-2">
                                            <i class="bi-cloud btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">31,999 Abone</span>
                                        </a>
                                        <a href="#" class="w-100 rounded btn btn-warning d-flex align-items-center p-3 mb-4">
                                            <i class="fab fa-dribbble btn btn-light btn-square rounded-circle me-3"></i>
                                            <span class="text-white">37,999 Abone</span>
                                        </a>
                                    </div>
                                </div>
                                <h4 class="my-4">Gündem Haberler</h4>
                                @await Component.InvokeAsync("NewsSidebarPartial")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>